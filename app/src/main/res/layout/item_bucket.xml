<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_bucket_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_bucket_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/item_bucket_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/item_bucket_image_view"
        app:layout_constraintTop_toTopOf="@id/item_bucket_image_view"
        app:layout_constraintBottom_toTopOf="@id/item_bucket_count_text_view"
        tools:text="Download"/>

    <TextView
        android:id="@+id/item_bucket_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/item_bucket_image_view"
        app:layout_constraintTop_toBottomOf="@id/item_bucket_name_text_view"
        app:layout_constraintBottom_toBottomOf="@id/item_bucket_image_view"
        tools:text="10ìž¥"/>
</androidx.constraintlayout.widget.ConstraintLayout>